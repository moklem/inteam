# MongoDB Configuration
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/database
JWT_SECRET=your-jwt-secret-here

# Server Configuration
NODE_ENV=production
PORT=5000
CORS_ORIGIN=https://inteamfe.onrender.com
FRONTEND_URL=https://inteamfe.onrender.com

# Coach Registration Password
COACH_REGISTRATION_PASSWORD=your-coach-password-here

# Email Configuration (Choose one of the following methods)

# Method 1: Brevo (Sendinblue) - RECOMMENDED FREE OPTION
# Get credentials from https://app.brevo.com → Settings → SMTP & API
BREVO_EMAIL=your-brevo-account-email@example.com
BREVO_API_KEY=your-brevo-smtp-key-here
EMAIL_FROM=Volleyball Team Manager <noreply@your-domain.com>

# Method 2: Email Service (Gmail, Outlook, etc.)
# For Gmail: Enable "Less secure app access" or use App Password
# EMAIL_SERVICE=gmail
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-password
# EMAIL_FROM=Volleyball Team Manager <your-email@gmail.com>

# Method 3: SMTP Configuration (for custom email servers)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@example.com
# SMTP_PASS=your-password
# EMAIL_FROM=Volleyball Team Manager <noreply@example.com>

# Push Notification Configuration (Web Push)
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_SUBJECT=mailto:your-email@example.com
